<%= form_for([@project, @member], html: { class: 'form-horizontal' }) do |f| %>
  <% if @member.errors.any? %>
     <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4><%= pluralize(@member.errors.count, "error") %> prohibited this Member from being saved:</h4>
      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, "User", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :user_id, @users.map { |value| [value.full_name, value.id]}, {disabled: @project_user_ids}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_role, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :user_role, @roles.map { |value| [value, value]}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>