<h2>Listing Projects</h2>
<hr>
<% if @projects.empty? %>
	<div class="alert alert-info" role="alert">
		<p>No projects available!</p>
		<%= link_to "Create new project", new_project_path, class: 'btn btn-success' %>
	</div>
<% else %>
<table class="table table-striped">
	<thead>
		<tr>
			<th>#</th>
			<th>Title</th>
			<th>Description</th>
			<th>Deadline</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @projects.each_with_index do |project, index| %>
			<tr>
				<td><%= index+1 %></td>
				<td><%= project.name %></td>
				<td><%= truncate(project.description) if project.description %></td>
				<td><%= project.finishing_date %></td>
				<td><%= link_to 'Show', project, class: 'btn btn-primary btn-xs' %></td>
				<% if can? :manage, project %>
				<td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-success btn-xs' %></td>
				<td><%= link_to 'Destroy', project, data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger btn-xs' %></td>
				<% else %>
					<td></td>
					<td></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
<% end %>
